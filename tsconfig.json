{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "sourceMap": true,
    "target": "ES5",
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "noImplicitAny": true
  },
  "include": ["src", "jest.setup.ts"],
  "exclude": ["node_modules"]
}
